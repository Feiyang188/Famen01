<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <override.MyViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"></override.MyViewPager>


    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#cccccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp6">

        <LinearLayout
            android:id="@+id/lvIndex"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivIndex"
                android:layout_width="@dimen/dp34"
                android:layout_height="@dimen/dp28"
                android:scaleType="fitXY"
                android:src="@mipmap/index2" />

            <TextView
                android:id="@+id/tvIndex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp4"
                android:layout_marginTop="@dimen/dp2"
                android:text="首页"
                android:textColor="#0a8496"
                android:textSize="@dimen/dp12" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/lvShopping"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivShopping"
                    android:layout_width="@dimen/dp32"
                    android:layout_height="@dimen/dp30"
                    android:layout_marginLeft="@dimen/dp2"
                    android:scaleType="fitXY"
                    android:src="@mipmap/shopping1" />

                <TextView
                    android:id="@+id/tvShopping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp4"
                    android:text="购物车"
                    android:textColor="#666666"
                    android:textSize="@dimen/dp12" />
            </LinearLayout>

            <ImageView
                android:visibility="gone"
                android:id="@+id/ivShoppingRedDot"
                android:layout_width="@dimen/dp10"
                android:layout_height="@dimen/dp10"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp26"
                android:scaleType="fitXY"
                android:src="@drawable/reddot" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/lvConsult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivConsult"
                    android:layout_width="@dimen/dp32"
                    android:layout_height="@dimen/dp30"
                    android:scaleType="fitXY"
                    android:src="@mipmap/consult1" />

                <TextView
                    android:id="@+id/tvConsult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp4"
                    android:text="咨询"
                    android:textColor="#666666"
                    android:textSize="@dimen/dp12" />
            </LinearLayout>

            <ImageView
                android:visibility="gone"
                android:id="@+id/ivConsultRedDot"
                android:layout_width="@dimen/dp10"
                android:layout_height="@dimen/dp10"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp24"
                android:scaleType="fitXY"
                android:src="@drawable/reddot" />
        </FrameLayout>


        <LinearLayout
            android:id="@+id/lvMine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivMine"
                android:layout_width="@dimen/dp32"
                android:layout_height="@dimen/dp30"
                android:scaleType="fitXY"
                android:src="@mipmap/mine1" />

            <TextView
                android:id="@+id/tvMine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp4"
                android:text="我的"
                android:textColor="#666666"
                android:textSize="@dimen/dp12" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
